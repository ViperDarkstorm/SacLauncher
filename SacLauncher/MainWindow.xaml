<Window x:Class="SacLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SacLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="SacEngine Launcher" Height="768" Width="1366" Loaded="Window_Loaded"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- Define Brushes for Textures -->
        <ImageBrush x:Key="StartTextureBrush" ImageSource="/images/button_start_active.png"/>
        <ImageBrush x:Key="EndTextureBrush" ImageSource="/images/button_end_active.png"/>
        <Style x:Key="CustomTextBox1Style" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <!-- Start Section -->
                            <Rectangle x:Name="StartRectangle" Width="20" HorizontalAlignment="Left">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/images/button_start_inactive.png"/>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Tile Section with Text Content -->
                            <Grid HorizontalAlignment="Stretch" Margin="20,0,20,0" Height="22">
                                <Rectangle x:Name="TileRectangle" Height="22">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="/images/textbox_middle.png" 
                                            Viewport="0,0,22,22" 
                                            ViewportUnits="Absolute" 
                                            TileMode="Tile" Stretch="Fill"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <!-- PART_ContentHost for text rendering -->
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                            </Grid>
                            <!-- End Section -->
                            <Rectangle x:Name="EndRectangle" Width="20" HorizontalAlignment="Right">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/images/button_end_inactive.png"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="StartRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_active.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="TileRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/textbox_middle.png" Viewport="0,0,22,22" 
ViewportUnits="Absolute" TileMode="Tile"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_active.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- MouseOver State -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsFocused" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="StartRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="TileRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_middle.png" Viewport="0,0,22,22" 
                                    ViewportUnits="Absolute" TileMode="Tile"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>


                            <!-- MouseOver and Checked State -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsFocused" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="StartRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="TileRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/textbox_middle.png" Viewport="0,0,22,22" 
ViewportUnits="Absolute" TileMode="Tile"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                            <!-- Focused State -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="False" />
                                    <Condition Property="IsFocused" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="StartRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_active.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="TileRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/textbox_middle.png" Viewport="0,0,22,22" 
ViewportUnits="Absolute" TileMode="Tile"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_active.png"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                            <!-- MouseOver and Focused State -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsFocused" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="StartRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_active.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="TileRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_middle.png" Viewport="0,0,22,22" 
ViewportUnits="Absolute" TileMode="Tile"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_active.png"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                            <!-- MouseOver checked and focused State -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsFocused" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="StartRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_active.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="TileRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/textbox_middle.png" Viewport="0,0,22,22" 
ViewportUnits="Absolute" TileMode="Tile"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_active.png"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Custom ComboBox Style -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- Start Texture -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Middle Section -->
                                <ColumnDefinition Width="*"/>
                                <!-- End Texture -->
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Start Texture -->
                            <Border x:Name="StartTexture" Grid.Column="0" Width="20" Background="{StaticResource StartTextureBrush}"/>

                            <!-- Middle Section -->
                            <Grid Grid.Column="1">
                                <Rectangle>
                                    <Rectangle.Fill>
                                        <VisualBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                                            <VisualBrush.Visual>
                                                <Image Source="/images/textbox_middle.png"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <!-- Editable Text Box -->
                                <TextBox x:Name="PART_EditableTextBox"
                                     Visibility="Collapsed"
                                     Background="Transparent"
                                     BorderBrush="Transparent"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     Margin="5,0,25,0"/>
                                <!-- Content Presenter -->
                                <ContentPresenter VerticalAlignment="Center"
                                              Margin="5,0,25,0"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                                <!-- Drop Down Button -->
                                <ToggleButton x:Name="PART_DropDownToggle"
                                          Content="▼"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Right"
                                          Width="20"
                                          Foreground="White"
                                          Background="Transparent"
                                          BorderBrush="Transparent"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
                            </Grid>

                            <!-- End Texture -->
                            <Border x:Name="EndTexture" Grid.Column="2" Width="20" Background="{StaticResource EndTextureBrush}"/>

                            <!-- Popup for Drop-Down Items -->
                            <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom" AllowsTransparency="True">
                                <Border BorderBrush="Black" BorderThickness="1">
                                    <Border.Background>
                                        <ImageBrush ImageSource="Images/dropdownmenu_texture.png" TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute" />
                                    </Border.Background>
                                    <ScrollViewer>
                                        <ItemsPresenter Width="{Binding RelativeSource={RelativeSource AncestorType=ComboBox}, Path=ActualWidth}"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>

                        </Grid>

                        <!-- Triggers -->
                        <ControlTemplate.Triggers>
                            <!-- Show TextBox when IsEditable is true -->
                            <Trigger Property="IsEditable" Value="True">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_EditableTextBox" Property="IsReadOnly" Value="False"/>
                                <Setter Property="ContentPresenter.Visibility" Value="Collapsed"/>
                            </Trigger>
                            <!-- Close dropdown when IsDropDownOpen is false -->
                            <Trigger Property="IsDropDownOpen" Value="False">
                                <Setter TargetName="PART_Popup" Property="IsOpen" Value="False"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsDropDownOpen" Value="False"/>
                                    <Condition Property="IsFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="StartTexture" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndTexture" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>

                            <!-- Dropdown Open State -->
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="StartTexture" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_active.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndTexture" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_active.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Handle Focus (Optional, for visual consistency) -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="StartTexture" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_active.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndTexture" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_active.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Style for ToggleButton/Checkbox -->
        <Style x:Key="CustomToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="BorderBrush" Value="#00000000"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Name="border" Background="{TemplateBinding Background}" BorderBrush="#00000000" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-4,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>

                            <!-- Trigger for when IsChecked is True -->
                            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/Button3.png"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <!-- MultiTrigger for when IsMouseOver is True and IsChecked is False -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/Button2.png"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>

                            <!-- Trigger for when IsMouseOver is False (Unchecked state) -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="False"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/Button1.png"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>

                            <!-- Trigger for when IsMouseOver is False (Checked state) -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="False"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/Button3.png"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Custom Slider Style -->
        <Style x:Key="CustomSliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <!-- Background Line with Tiled Texture -->
                            <Rectangle Height="20" VerticalAlignment="Center">
                                <Rectangle.Fill>
                                    <VisualBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                                        <VisualBrush.Visual>
                                            <Image Source="Images/line_texture.png"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Buttons and Track -->
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- Decrease Button -->
                                <Button Grid.Column="0" VerticalAlignment="Center"
        Click="DecreaseButton_Click" BorderBrush="{x:Null}" 
        Width="20" Height="20" Tag="{Binding RelativeSource={RelativeSource AncestorType=Slider}}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <!-- Default Background -->
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <ImageBrush ImageSource="/images/slider_minus.png"/>
                                                </Setter.Value>
                                            </Setter>

                                            <!-- Template for Visual Structure -->
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Name="border" Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <!-- Slider Active (Focused) -->
                                                            <DataTrigger Binding="{Binding IsFocused, RelativeSource={RelativeSource AncestorType=Slider}}" Value="True">
                                                                <Setter TargetName="border" Property="Background">
                                                                    <Setter.Value>
                                                                        <ImageBrush ImageSource="/images/slider_minus_active.png"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Track Area -->
                                <Track x:Name="PART_Track" Grid.Column="1" VerticalAlignment="Center">
                                    <Track.Thumb>
                                        <Thumb x:Name="PART_Thumb" Width="20" Height="20" VerticalAlignment="Center" DragDelta="Thumb_DragDelta">
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Image Source="Images/slider_square.png" Stretch="Uniform"/>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>

                                <!-- Increase Button -->
                                <Button Grid.Column="2" VerticalAlignment="Center"
        Click="IncreaseButton_Click" BorderBrush="{x:Null}" 
        Width="20" Height="20" Tag="{Binding RelativeSource={RelativeSource AncestorType=Slider}}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <!-- Default Background -->
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <ImageBrush ImageSource="/images/slider_plus.png"/>
                                                </Setter.Value>
                                            </Setter>

                                            <!-- Template for Visual Structure -->
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Name="border" Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <!-- Slider Active (Focused) -->
                                                            <DataTrigger Binding="{Binding IsFocused, RelativeSource={RelativeSource AncestorType=Slider}}" Value="True">
                                                                <Setter TargetName="border" Property="Background">
                                                                    <Setter.Value>
                                                                        <ImageBrush ImageSource="/images/slider_plus_active.png"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CustomCheckboxStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <!-- Start Section -->
                            <Rectangle x:Name="StartRectangle" Width="20" HorizontalAlignment="Left">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/images/button_start_inactive.png"/>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Checkbox Section -->
                            <Rectangle x:Name="CheckboxRectangle" Width="20" HorizontalAlignment="Left" Margin="20,0,0,0">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/images/checkbox_unchecked.png"/>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Tile Section with Text Content -->
                            <Grid HorizontalAlignment="Stretch" Margin="40,0,20,0" Height="22">
                                <Rectangle x:Name="TileRectangle" Height="22">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="/images/button_middle.png" 
                                    Viewport="0,0,22,22" 
                                    ViewportUnits="Absolute" 
                                    TileMode="Tile" Stretch="Fill"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <!-- Centered Content -->
                                <TextBlock x:Name="ContentText"
       Text="{TemplateBinding Content}" 
       HorizontalAlignment="Left" 
       VerticalAlignment="Center" 
       FontFamily="Verdana">
                                    <TextBlock.Foreground>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF8C6600"/>
                                            <GradientStop Color="#FF8C6600" Offset="1"/>
                                            <GradientStop Color="#FFCFCFFE" Offset="0.5"/>
                                        </LinearGradientBrush>
                                    </TextBlock.Foreground>
                                </TextBlock>
                            </Grid>

                            <!-- End Section -->
                            <Rectangle x:Name="EndRectangle" Width="20" HorizontalAlignment="Right">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/images/button_end_inactive.png"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Checked State -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="StartRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="CheckboxRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/checkbox_checked.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="TileRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_middle.png" Viewport="0,0,22,22" 
                                    ViewportUnits="Absolute" TileMode="Tile"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="StartRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_active.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="CheckboxRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/checkbox_checked.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="TileRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_middle.png" Viewport="0,0,22,22" 
ViewportUnits="Absolute" TileMode="Tile"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_active.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- MouseOver State -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsChecked" Value="False" />
                                    <Condition Property="IsFocused" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="StartRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="CheckboxRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/checkbox_unchecked.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="TileRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_middle.png" Viewport="0,0,22,22" 
                                    ViewportUnits="Absolute" TileMode="Tile"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" TargetName="ContentText">
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFBA8D1E"/>
                                            <GradientStop Color="#FFAC7E00" Offset="1"/>
                                            <GradientStop Color="#FFFEFEFE" Offset="0.5"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="EndRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_end_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>


                            <!-- MouseOver and Checked State -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsChecked" Value="True" />
                                    <Condition Property="IsFocused" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="StartRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/button_start_inactive.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="CheckboxRectangle" Property="Fill">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/images/checkbox_checked.png"/>
                                    </Setter.Value>
                                </Setter>
